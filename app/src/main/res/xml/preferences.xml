<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
    <PreferenceCategory android:title="网络设置">
        <EditTextPreference
            android:key="api_url"
            android:title="@string/pref_api_url_title"
            android:summary="@string/pref_api_url_summary"
            android:defaultValue="@string/pref_api_url_default"
            android:inputType="textUri" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="关于">
        <Preference
            android:title="版本"
            android:summary="1.0.0"
            android:selectable="false" />
        
        <Preference
            android:title="开源许可"
            android:summary="MIT License" />
    </PreferenceCategory>
    
</androidx.preference.PreferenceScreen>
